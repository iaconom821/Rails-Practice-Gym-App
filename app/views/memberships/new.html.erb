<h1>New Membership</h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |msg| %>
		<p><%= msg %></p>
	<% end %>
<% end %>

<%= form_for @membership do |f|%>
    <%= f.label :membership_price %>
    <%= f.number_field :membership_charge, step: 0.01 %>
    <br/>
    <%= f.label :gym %>
    <%= f.collection_select :gym_id, @gyms, :id, :name %>
    <br/>
    <%= f.label :client %>
    <%= f.collection_select :client_id, @clients, :id, :name %>
    <br/>
    <%= f.submit %>
    
<% end %>

<div>
    <%= link_to "Gyms", gyms_path %> | <%= link_to "Clients", clients_path %> | <%= link_to "Register Membership", new_membership_path %> | <%= link_to "Add A Gym", new_gym_path %> | <%= link_to "Add A Client", new_client_path %>
</div>